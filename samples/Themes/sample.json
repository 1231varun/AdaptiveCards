{
  "fontFamily": "Calibri",
  "fontSizes": {
    "small": 10,
    "normal": 12,
    "medium": 14,
    "large": 17,
    "extraLarge": 20
  },
  "supportsInteractivity": true,
  "imageSizes": {
    "small": 60,
    "medium": 120,
    "large": 180
  },
  "strongSeparation": {
    "spacing": 20,
    "lineThickness": 1,
    "lineColor": "#FF707070"
  },
  "colors": {
    "default": {
      "normal": "#FF000000",
      "subtle": "#b2000000"
    },
    "accent": {
      "normal": "#FF0000FF",
      "subtle": "#b20000FF"
    },
    "dark": {
      "normal": "#FF101010",
      "subtle": "#b2101010"
    },
    "light": {
      "normal": "#FFFFFFFF",
      "subtle": "#b2FFFFFF"
    },
    "good": {
      "normal": "#FF008000",
      "subtle": "#b2008000"
    },
    "warning": {
      "normal": "#FFFFD700",
      "subtle": "#b2FFD700"
    },
    "attention": {
      "normal": "#FF8B0000",
      "subtle": "#b28B0000"
    }
  },
  "adaptiveCard": {
    "padding": {
      "left": 8,
      "top": 8,
      "right": 8,
      "bottom": 8
    },
    "backgroundColor": "#FFFFFF"
  },
  "container": {
    "normal": {
      "separation": {
        "spacing": 10,
        "lineThickness": 0
