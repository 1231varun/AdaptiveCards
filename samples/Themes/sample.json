      "backgroundColor": "#00FFFFFF",
      "padding": {
        "left": 0,
        "top": 0,
        "right": 0,
        "bottom": 0
      },
      "borderColor": "#00FFFFFF",
      "borderThickness": {
        "left": 0,
        "top": 0,
        "right": 0,
        "bottom": 0
      }
    },
    "separation": {
      "spacing": 10,
      "lineThickness": 0
    }
  },
  "column": {
    "separation": {
      "spacing": 10,
      "lineThickness": 0
    }
  },
  "imageSet": {
    "imageSize": "medium",
    "separation": {
      "spacing": 10,
      "lineThickness": 0
    }
  },
  "factSet": {
    "title": {
      "weight": "bolder",
      "wrap": false
    },
    "value": {
      "wrap": false
    },
    "spacing": 20,
