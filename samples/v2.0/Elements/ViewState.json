{	"type": "AdaptiveCard",	"version": "2.0",	"body": [		{			"type": "ColumnSet",			"columns": [				{					"type": "Column",					"size": "auto",					"items": [						{							"type": "Image",							"url": "http://connectorsdemo.azurewebsites.net/images/MSC12_Oscar_002.jpg",							"style": "person",							"size": "small"						}					]				},				{					"type": "Column",					"items": [						{							"type": "TextBlock",							"text": "Title!",							"size": "Large",							"wrap": true						},						{							"type": "TextBlock",							"text": "SubTitle!",							"size": "Medium",							"wrap": true						},						{							"type": "Container",							"id": "CardBody",							"visibility": false,							"items": [								{									"type": "TextBlock",									"text": "Adaptive Cards now supports view states!",									"wrap": true								}							]						}					]				},				{					"type": "Column",					"size": "auto",					"items": [						{							"type": "ActionSet",							"actions": [								{									"id": "toggleActionId",									"type": "Action.ToggleViewState",									"title": "Ë…",									"toggleId": "CardBody"								}							]						}					]				}			]		}	]}