{
	"$schema": "http://adaptivecards.io/schemas/adaptive-card.json",
	"type": "AdaptiveCard",
	"version": "1.0",
	"body": [
		{
			"type": "Container",
			"items": [
				{
					"type": "TextBlock",
					"text": "Cool Link"
				}
			],
			"selectAction": {
				"type": "Action.OpenUrl",
				"title": "Cool Link",
				"url": "https://www.youtube.com/watch?v=dQw4w9WgXcQ"
			}
		},
		{
			"type": "Container",
			"style": "emphasis",
			"items": [
				{
					"type": "TextBlock",
					"text": "Emphasized Link"
				}
			],
			"selectAction": {
				"type": "Action.OpenUrl",
				"title": "Emphasized Link",
				"url": "https://msn.com"
			}
		},
		{
			"type": "Container",
			"items": [
				{
					"type": "TextBlock",
					"text": "This is a really long text block that should wrap, hope it works!",
					"wrap": true
				}
			],
			"selectAction": {
				"type": "Action.Submit",
				"title": "Wrapping Text Submit",
				"data": "Submitted!"
			}
		},
		{
			"type": "Container",
			"items": [
				{
					"type": "TextBlock",
					"text": "Submit action"
				}
			],
			"selectAction": {
				"type": "Action.Submit",
				"title": "Submit action",
				"data": {
					"info": "My submit action data"
				}
			}
		}
	]
}
