{
	"$schema": "http://adaptivecards.io/schemas/adaptive-card.json",
	"type": "AdaptiveCard",
	"version": "1.0",
	"body": [
		{
			"type": "ColumnSet",
			"minHeight": "800px",
			"columns": [
				{
					"type": "Column",
					"minHeight": "700px",
					"items": [
						{
							"type": "TextBlock",
							"text": "TextBlock",
							"minHeight": "100px"
						},
						{
							"type": "Image",
							"url": "http://adaptivecards.io/content/cats/1.png",
							"height": "50px",
							"width": "50px",
							"minHeight": "100px"
						},
						{
							"type": "Input.ChoiceSet",
							"id": "myColor",
							"style": "compact",
							"isMultiSelect": false,
							"value": "1",
							"minHeight": "100px",
							"choices": [
								{
									"title": "Red",
									"value": "1"
								}
							]
						},
						{
							"type": "Input.Number",
							"id": "number",
							"minHeight": "100px",
							"placeholder": "Enter a number",
							"min": 1,
							"max": 10,
							"value": 3
						},
						{
							"type": "Input.Time",
							"id": "time",
							"minHeight": "100px",
							"min": "09:00",
							"max": "17:00",
							"value": "15:30"
						},
						{
							"type": "Media",
							"minHeight": "100px",
							"poster": "https://adaptivecards.io/content/poster-video.png",
							"sources": [
								{
									"mimeType": "video/mp4",
									"url": "https://adaptivecardsblob.blob.core.windows.net/assets/AdaptiveCardsOverviewVideo.mp4"
								}
							]
						}
					]
				},
				{
					"type": "Column",
					"minHeight": "700px",
					"items": [
						{
							"type": "FactSet",
							"minHeight": "100px",
							"facts": [
								{
									"title": "Fact 1",
									"value": "Value 1"
								},
								{
									"title": "Fact 2",
									"value": "Value 2"
								}
							]
						},
						{
							"type": "ImageSet",
							"minHeight": "100px",
							"images": [
								{
									"type": "Image",
									"url": "http://adaptivecards.io/content/cats/1.png",
									"height": "50px",
									"width": "50px"
								},
								{
									"type": "Image",
									"url": "http://adaptivecards.io/content/cats/1.png",
									"height": "50px",
									"width": "50px"
								}	
							]
						},
						{
							"type": "Input.Date",
							"id": "date",
							"minHeight": "100px",
							"placeholder": "Enter a date",
							"value": "2017-10-12"
						},
						{
							"type": "Input.Text",
							"id": "input2",
							"minHeight": "100px",
							"placeholder": "enter comment",
							"maxLength": 500,
							"isMultiline": true
						},
						{
							"type": "Input.Toggle",
							"id": "acceptTerms",
							"minHeight": "100px",
							"title": "I accept the terms and agreements",
							"value": "true",
							"valueOn": "true",
							"valueOff": "false"
						},
						{
							"type": "Container",
							"minHeight": "100px",
							"items": [
								{
									"type": "TextBlock",
									"text": "This is some text"
								}
							]
						}
					]
				}
			]
		}
	]
}