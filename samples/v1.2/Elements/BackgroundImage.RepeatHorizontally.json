{
	"$schema": "http://adaptivecards.io/schemas/adaptive-card.json",
	"type": "AdaptiveCard",
	"version": "1.2",
	"backgroundImage": {
		"url": "http://icons.iconarchive.com/icons/pixelmixer/basic/48/plus-icon.png",
		"mode": "repeatHorizontally",
		"verticalAlignment": "bottom"
	},
	"body": [
		{
			"type": "TextBlock",
			"text": "Text in body"
		},
		{
			"type": "Column",
			"width": "auto",
			"items": [
				{
					"type": "TextBlock",
					"text": "Text in Column"
				}
			]
		},
		{
			"type": "Container",
			"items": [
				{
					"type": "TextBlock",
					"text": "Text in Container"
				}
			]
		}
	]
}
