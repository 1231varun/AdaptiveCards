{
  "definitions": {
    "ActionsConfig": {
      "type": [
        "object",
        "null"
      ],
      "description": "Options for `Action`s",
      "properties": {
        "actionsOrientation": {
          "type": "string",
          "enum": [
            "horizontal",
            "vertical"
          ]
        },
        "actionAlignment": {
          "type": "string",
          "enum": [
            "left",
            "center",
            "right",
            "stretch"
          ]
        },
        "buttonSpacing": {
          "type": "integer"
        },
        "maxActions": {
          "type": "integer"
        },
        "spacing": {
          "type": "string",
          "enum": [
            "default",
            "none",
            "small",
            "medium",
            "large",
            "extraLarge",
            "padding"
          ]
        },
        "showCard": {
          "$ref": "#/definitions/ShowCardConfig"
        },
        "iconPlacement": {
          "type": "string",
          "enum": [
            "aboveTitle",
            "leftOfTitle"
          ]
        },
        "iconSize": {
          "type": "integer"
        }
      }
    },
    "AdaptiveCardConfig": {
      "type": [
        "object",
        "null"
      ],
      "description": "Toplevel options for `AdaptiveCards`",
      "properties": {
        "allowCustomStyle": {
          "type": "boolean"
        }
      }
    },
    "ContainerStyleConfig": {
      "type": [
        "object",
        "null"
      ],
      "properties": {
        "backgroundColor": {
          "type": [
            "string",
            "null"
          ]
        },
        "foregroundColors": {
          "$ref": "#/definitions/ForegroundColorsConfig"
        }
      }
    },
    "ContainerStylesConfig": {
      "type": [
        "object",
        "null"
      ],
      "properties": {
        "default": {
          "$ref": "#/definitions/ContainerStyleConfig"
        },
        "emphasis": {
          "$ref": "#/definitions/ContainerStyleConfig"
        }
      }
    },
    "FactSetConfig": {
      "type": [
        "object",
        "null"
      ],
      "properties": {
        "title": {
          "$ref": "#/definitions/TextBlockConfig"
        },
        "value": {
          "$ref": "#/definitions/TextBlockConfig"
        },
        "spacing": {
          "type": "integer"
        }
      },
      "required": [
        "spacing"
      ]
    },
    "FontColorConfig": {
      "type": [
        "object",
        "null"
      ],
      "properties": {
        "default": {
          "type": [
            "string",
            "null"
          ],
          "description": "Color to use when displaying default text"
        },
        "subtle": {
          "type": [
            "string",
            "null"
          ],
          "description": "Color to use when displaying subtle text"
        }
      }
    },
    "FontSizesConfig": {
      "type": [
        "object",
        "null"
      ],
      "description": "Controls font size metrics for different text styles.",
      "properties": {
        "small": {
          "type": "integer",
          "description": "Small font size",
          "default": 10
        },
        "default": {
          "type": "integer",
          "description": "Default font size",
          "default": 12
        },
        "medium": {
          "type": "integer",
          "description": "Medium font size",
          "default": 14
        },
        "large": {
          "type": "integer",
          "description": "Large font size",
          "default": 17
        },
        "extraLarge": {
          "type": "integer",
          "description": "Extra large font size",
          "default": 20
        }
      }
    },
    "FontWeightsConfig": {
      "type": [
        "object",
        "null"
      ],
      "properties": {
        "lighter": {
          "type": "integer",
          "default": 200
        },
        "default": {
          "type": "integer",
          "default": 400
        },
        "bolder": {
          "type": "integer",
          "default": 800
        }
      }
    },
    "ForegroundColorsConfig": {
      "type": [
        "object",
        "null"
      ],
      "properties": {
        "default": {
          "$ref": "#/definitions/FontColorConfig",
          "default": {
            "default": "#FF000000",
            "subtle": "#B2000000"
          }
        },
        "accent": {
          "$ref": "#/definitions/FontColorConfig",
          "default": {
            "default": "#FF0000FF",
            "subtle": "#B20000FF"
          }
        },
        "dark": {
          "$ref": "#/definitions/FontColorConfig",
          "default": {
            "default": "#FF101010",
            "subtle": "#B2101010"
          }
        },
        "light": {
          "$ref": "#/definitions/FontColorConfig",
          "default": {
            "default": "#FFFFFFFF",
            "subtle": "#B2FFFFFF"
          }
        },
        "good": {
          "$ref": "#/definitions/FontColorConfig",
          "default": {
            "default": "#FF008000",
            "subtle": "#B2008000"
          }
        },
        "warning": {
          "$ref": "#/definitions/FontColorConfig",
          "default": {
            "default": "#FFFFD700",
            "subtle": "#B2FFD700"
          }
        },
        "attention": {
          "$ref": "#/definitions/FontColorConfig",
          "default": {
            "default": "#FF8B0000",
            "subtle": "#B28B0000"
          }
        }
      }
    },
    "ImageSetConfig": {
      "type": [
        "object",
        "null"
      ],
      "properties": {
        "imageSize": {
          "type": "string",
          "enum": [
            "auto",
            "stretch",
            "small",
            "medium",
            "large"
          ]
        }
      },
      "required": [
        "imageSize"
      ]
    },
    "ImageSizesConfig": {
      "type": [
        "object",
        "null"
      ],
      "properties": {
        "small": {
          "type": "integer"
        },
        "medium": {
          "type": "integer"
        },
        "large": {
          "type": "integer"
        }
      },
      "required": [
        "small",
        "medium",
        "large"
      ]
    },
    "SeparatorConfig": {
      "type": [
        "object",
        "null"
      ],
      "properties": {
        "lineThickness": {
          "type": "integer"
        },
        "lineColor": {
          "type": [
            "string",
            "null"
          ]
        }
      },
      "required": [
        "lineThickness"
      ]
    },
    "ShowCardConfig": {
      "type": [
        "object",
        "null"
      ],
      "properties": {
        "actionMode": {
          "type": "string",
          "enum": [
            "inline",
            "popup"
          ]
        },
        "inlineTopMargin": {
          "type": "integer"
        }
      }
    },
    "SpacingsConfig": {
      "type": [
        "object",
        "null"
      ],
      "properties": {
        "small": {
          "type": "integer"
        },
        "default": {
          "type": "integer"
        },
        "medium": {
          "type": "integer"
        },
        "large": {
          "type": "integer"
        },
        "extraLarge": {
          "type": "integer"
        },
        "padding": {
          "type": "integer"
        }
      },
      "required": [
        "small",
        "default",
        "medium",
        "large",
        "extraLarge",
        "padding"
      ]
    },
    "TextBlockConfig": {
      "type": [
        "object",
        "null"
      ],
      "description": "Parameters controlling the display of text.",
      "properties": {
        "size": {
          "type": "string",
          "description": "Font size to use when a card doesn't specify.",
          "enum": [
            "default",
            "small",
            "medium",
            "large",
            "extraLarge"
          ],
          "default": "default"
        },
        "weight": {
          "type": "string",
          "description": "Font weight to use when a card doesn't specify.",
          "enum": [
            "normal",
            "lighter",
            "bolder"
          ],
          "default": "normal"
        },
        "color": {
          "type": "string",
          "description": "Font color to use when a card doesn't specify.",
          "enum": [
            "default",
            "dark",
            "light",
            "accent",
            "good",
            "warning",
            "attention"
          ],
          "default": "default"
        },
        "isSubtle": {
          "type": "boolean",
          "description": "Should text be subtle if a card doesn't specify.",
          "default": false
        },
        "wrap": {
          "type": "boolean",
          "description": "Should text wrap if a card doesn't specify.",
          "default": true
        },
        "maxWidth": {
          "type": "integer",
          "description": "Maximum width to use if a card doesn't specify.",
          "default": 0
        }
      }
    }
  },
  "type": "object",
  "properties": {
    "actions": {
      "$ref": "#/definitions/ActionsConfig"
    },
    "adaptiveCard": {
      "$ref": "#/definitions/AdaptiveCardConfig"
    },
    "containerStyles": {
      "$ref": "#/definitions/ContainerStylesConfig"
    },
    "imageSizes": {
      "$ref": "#/definitions/ImageSizesConfig"
    },
    "imageSet": {
      "$ref": "#/definitions/ImageSetConfig"
    },
    "factSet": {
      "$ref": "#/definitions/FactSetConfig"
    },
    "fontFamily": {
      "type": [
        "string",
        "null"
      ]
    },
    "fontSizes": {
      "$ref": "#/definitions/FontSizesConfig"
    },
    "fontWeights": {
      "$ref": "#/definitions/FontWeightsConfig"
    },
    "spacing": {
      "$ref": "#/definitions/SpacingsConfig"
    },
    "separator": {
      "$ref": "#/definitions/SeparatorConfig"
    },
    "supportsInteractivity": {
      "type": "boolean"
    },
    "imageBaseUrl": {
      "type": [
        "string",
        "null"
      ],
      "format": "uri"
    }
  },
  "required": [
    "supportsInteractivity"
  ]
}
