<Page
    x:Class="UWPCPP.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:UWPCPP"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid>
        <StackPanel Margin="30"  Orientation="Horizontal">
            <TextBlock HorizontalAlignment="Left" Padding="6" Text="AdaptiveCard to load:" TextWrapping="Wrap" VerticalAlignment="Top" Height="32"/>
            <TextBox x:Name="fileToLoad" HorizontalAlignment="Left" MinWidth="400" Text="" PlaceholderText="File path here" TextChanged="FileToLoad_TextChanged" VerticalAlignment="Top"/>
            <Button Content="Browse Path" Margin="5,0,0,0" HorizontalAlignment="Right" VerticalAlignment="Top" Click="BrowseClicked"/>
            <Button Content="Load" Margin="5,0,0,0" HorizontalAlignment="Right" VerticalAlignment="Top" Click="LoadClicked"/>
        </StackPanel>
        <ContentControl Margin="30"  x:Name="renderedCardGoesHere"/>
    </Grid>
</Page>
