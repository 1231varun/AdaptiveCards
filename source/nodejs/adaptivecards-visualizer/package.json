		"mini-css-extract-plugin": "^0.4.4",
		"monaco-editor-webpack-plugin": "^1.5.4",
		"node-sass": "^4.7.2",
		"postcss": "^5.2.18",
		"postcss-cli": "^3.1.1",
		"style-loader": "^0.23.1",
		"tslint": "^4.4.2",
