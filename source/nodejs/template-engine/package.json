{
	"name": "template-engine",
	"version": "0.5.0",
	"description": "Template engine for transforming JSON",
	"author": "AdaptiveCards",
	"license": "MIT",
	"main": "lib/template-engine.js",
	"types": "lib/template-engine.d.ts",
	"files": [
		"lib",
		"dist",
		"src"
	],
	"scripts": {
		"clean": "rimraf build lib dist",
		"prebuild": "tsc",
		"build": "webpack",
		"watch": "webpack --watch",
		"start": "webpack-dev-server --open",
		"dts": "dts-generator --name template-engine --project . --out dist/template-engine.d.ts",
		"lint": "tslint -c tslint.json 'src/**/*.{ts,tsx}'",
		"release": "npm run build && webpack --mode=production && npm run dts"
	},
	"devDependencies": {
		"typescript": "^3.2.2",
		"webpack": "^4.27.1",
		"webpack-cli": "^3.1.2",
		"webpack-concat-plugin": "^3.0.0",
		"webpack-dev-server": "^3.1.14"
	}
}
