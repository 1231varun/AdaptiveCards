{
	"name": "adaptivecards-designer-control",
	"version": "1.0.0",
	"description": "Adaptive Card designer embeddable control",
	"author": "AdaptiveCards",
	"license": "MIT",
	"main": "lib/adaptivecards-designer-control.js",
	"types": "lib/adaptivecards-designer-control.d.ts",
	"files": [
		"lib",
		"dist"
	],
	"scripts": {
		"clean": "rimraf build lib dist",
		"compile": "npm run clean && tsc",
		"compile:watch": "npm run clean && tsc -w",
		"bundle": "cross-env NODE_ENV=production webpack",
		"build": "npm run compile && npm run bundle",
		"build:debug": "npm run clena && tsc -p ./tsconfig.debug.json && webpack",
		"watch": "webpack --watch",
		"dts": "dts-generator --name adaptivecards-designer-control --project . --out dist/adaptivecards-designer-control.d.ts",
		"lint": "tslint -c tslint.json 'src/**/*.{ts,tsx}'",
		"version": "npm run build && npm test && npm run dts"
	},
	"devDependencies": {
		"@types/jest": "^21.1.8",
		"@types/node": "0.0.2",
		"ajv-cli": "1.1.1",
		"awesome-typescript-loader": "^3.4.0",
		"babel-jest": "^21.2.0",
		"cross-env": "^5.1.1",
		"dts-generator": "^2.1.0",
		"jest": "^21.2.1",
		"json-loader": "0.5.4",
		"regenerator-runtime": "^0.11.0",
		"ts-jest": "^21.2.3",
		"tslint": "^4.4.2",
		"typescript": "^2.6.1",
		"webpack": "^3.8.1",
		"glob": "7.1.2"
	},
	"dependencies": {
		"adaptivecards": "latest",
		"clipboard": "^2.0.1"
	}
}
