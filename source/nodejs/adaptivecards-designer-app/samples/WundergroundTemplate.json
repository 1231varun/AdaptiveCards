{
	"$schema": "http://adaptivecards.io/schemas/adaptive-card.json",
	"type": "AdaptiveCard",
	"version": "1.0",
	"body": [
		{
			"type": "ColumnSet",
			"columns": [
				{
					"type": "Column",
					"width": "stretch",
					"items": [
						{
							"type": "TextBlock",
							"text": "{hourly_forecast[0].condition}",
							"weight": "bolder"
						},
						{
							"type": "TextBlock",
							"text": "San Francisco",
							"isSubtle": true,
							"spacing": "none"
						},
						{
							"type": "TextBlock",
							"text": "High: 68° Low: 49°",
							"isSubtle": true,
							"spacing": "none"
						}
					]
				},
				{
					"type": "Column",
					"width": "auto",
					"items": [
						{
							"type": "TextBlock",
							"text": "{hourly_forecast[0].temp.english}°",
							"size": "large",
							"weight": "bolder"
						}
					]
				},
				{
					"type": "Column",
					"width": "auto",
					"items": [
						{
							"type": "Image",
							"url": "{hourly_forecast[0].icon_url}",
							"size": "small"
						}
					]
				}
			]
		},
