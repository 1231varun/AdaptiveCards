{
    "type": "AdaptiveCard",
    "body": [
        {
            "type": "ColumnSet",
            "columns": [
                {
                    "type": "Column",
                    "items": [
                        {
                            "type": "TextBlock",
                            "horizontalAlignment": "Center",
                            "size": "ExtraLarge",
                            "weight": "Bolder",
                            "color": "Accent",
                            "text": "{{TIME({appointmentTime})}}"
                        }
                    ],
                    "width": "150px",
                    "bleed": true,
                    "style": "accent"
                },
                {
                    "type": "Column",
                    "items": [
                        {
                            "type": "TextBlock",
                            "weight": "Bolder",
                            "text": "{patient.name}",
                            "wrap": true,
                            "size": "Large"
                        }
                    ],
                    "width": "stretch",
                    "bleed": true,
                    "verticalContentAlignment": "Center",
                    "spacing": "Medium"
                }
            ],
            "bleed": true
        },
        {
            "type": "FactSet",
            "facts": [
                {
                    "title": "Provider:",
                    "value": "{provider.name}"
                },
                {
                    "title": "Room:",
                    "value": "{room}"
                },
                {
                    "title": "Comment:",
                    "value": "{patientNeed}"
                }
            ]
        }
    ],
    "actions": [
        {
            "type": "Action.Submit",
            "title": "Check-in",
            "sentiment": "Positive"
        },
		{
			"type": "Action.ShowCard",
			"title": "Reschedule",
			"card": {
				"type": "AdaptiveCard",
				"body": [
					{
						"type": "TextBlock",
						"text": "Enter appointment time:"
					},
					{
						"type": "ColumnSet",
						"columns": [
							{
								"type": "Column",
								"items": [
									{
										"type": "Input.Date",
										"id": "date"
									}
								],
								"width": "stretch",
								"bleed": true
							},
							{
								"type": "Column",
								"items": [
									{
										"type": "Input.Time",
										"id": "time"
									}
								],
								"width": "stretch",
								"bleed": true
							}
						]
					}
				],
				"actions": [
					{
						"type": "Action.Submit",
						"title": "OK",
						"sentiment": "Positive"
					}
				]
			}
		},
        {
            "type": "Action.Submit",
            "title": "Cancel appointment",
            "sentiment": "Destructive"
        }
    ],
    "$schema": "http://adaptivecards.io/schemas/adaptive-card.json",
    "version": "1.0"
}