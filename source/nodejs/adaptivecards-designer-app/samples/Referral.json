{
	"type": "AdaptiveCard",
	"version": "1.0",
	"body": [
		{
			"type": "ColumnSet",
			"columns": [
				{
					"type": "Column",
					"items": [
						{
							"type": "Image",
							"style": "Person",
							"url": "{patient.photo}",
							"size": "Small",
							"width": "50px",
							"height": "50px"
						}
					],
					"width": "auto"
				},
				{
					"type": "Column",
					"items": [
						{
							"type": "TextBlock",
							"text": "{patient.name}",
							"size": "Large"
						},
						{
							"type": "TextBlock",
							"spacing": "Small",
							"text": "{referralNeed}",
							"wrap": true
						}
					],
					"width": "stretch"
				},
				{
					"type": "Column",
					"style": "good",
					"height": "stretch",
					"verticalContentAlignment": "center",
					"width": "auto",
					"items": [
						{
							"type": "TextBlock",
							"text": "Insured"
						}
					],
					"width": "auto",
					"$when": "{patient.isInsured}"
				},
				{
					"type": "Column",
					"style": "attention",
					"height": "stretch",
					"width": "auto",
					"verticalContentAlignment": "center",
					"items": [
						{
							"type": "TextBlock",
							"text": "Not insured"
						}
					],
					"$when": "{!patient.isInsured}"
				}
			]
		},
		{
			"type": "TextBlock",
			"text": "Requested appointment date: **{{DATE({requestedDate})}}**"
		},
		{
			"type": "TextBlock",
			"text": "{comments}",
			"fontFamily": "Monospace",
			"wrap": true
		},
		{
			"type": "TextBlock",
			"spacing": "Large",
			"size": "Medium",
			"text": "Referred By"
		},
		{
			"type": "Container",
			"style": "emphasis",
			"items": [
				{
					"type": "ColumnSet",
					"columns": [
						{
							"type": "Column",
							"items": [
								{
									"type": "Image",
									"style": "Person",
									"url": "{referredBy.photo}",
									"size": "Small",
									"width": "50px",
									"height": "50px"
								}
							],
							"width": "auto",
							"bleed": true
						},
						{
							"type": "Column",
							"items": [
								{
									"type": "TextBlock",
									"weight": "Bolder",
									"text": "{referredBy.name}",
									"wrap": true,
									"size": "Large"
								},
								{
									"type": "TextBlock",
									"spacing": "None",
									"text": "Available now",
									"isSubtle": true,
									"wrap": true,
									"color": "Good",
									"weight": "Bolder"
								}
							],
							"width": "stretch",
							"verticalContentAlignment": "Center",
							"bleed": true
						},
						{
							"type": "Column",
							"selectAction": {
								"type": "Action.ToggleVisibility",
								"targetElements": [
									"details",
									"chevronUp",
									"chevronDown"
								]
							},
							"verticalContentAlignment": "Center",
							"items": [
								{
									"type": "Image",
									"url": "https://maxcdn.icons8.com/Share/icon/win8/Arrows/chevron_down1600.png",
									"height": "16px"
								}
							],
							"width": "auto",
							"id": "chevronDown",
							"bleed": true
						},
						{
							"type": "Column",
							"verticalContentAlignment": "Center",
							"selectAction": {
								"type": "Action.ToggleVisibility",
								"targetElements": [
									"details",
									"chevronUp",
									"chevronDown"
								]
							},
							"items": [
								{
									"type": "Image",
									"url": "https://maxcdn.icons8.com/Share/icon/win8/Arrows/chevron_up1600.png",
									"height": "16px"
								}
							],
							"width": "auto",
							"id": "chevronUp",
							"isVisible": false,
							"bleed": true
						}
					],
					"style": "emphasis",
					"bleed": true
				}
			],
			"bleed": true
		},
		{
			"type": "Container",
			"id": "details",
			"items": [
				{
					"type": "FactSet",
					"facts": [
						{
							"$data": "{referredBy.contact}",
							"title": "{name}:",
							"value": "{number}"
						}
					]
				}
			],
			"isVisible": false
		}
	],
	"actions": [
		{
			"type": "Action.ShowCard",
			"title": "Schedule",
			"sentiment": "Positive",
			"card": {
				"type": "AdaptiveCard",
				"body": [
					{
						"type": "TextBlock",
						"text": "Enter appointment time:"
					},
					{
						"type": "ColumnSet",
						"columns": [
							{
								"type": "Column",
								"items": [
									{
										"type": "Input.Date",
										"id": "date"
									}
								],
								"width": "stretch"
							},
							{
								"type": "Column",
								"items": [
									{
										"type": "Input.Time",
										"id": "time"
									}
								],
								"width": "stretch"
							}
						]
					},
					{
						"type": "ColumnSet",
						"columns": [
							{
								"type": "Column",
								"items": [
									{
										"type": "Input.ChoiceSet",
										"id": "room",
										"title": "Room",
										"placeholder": "Room",
										"choices": [
											{
												"title": "1",
												"value": "1"
											},
											{
												"title": "2",
												"value": "2"
											},
											{
												"title": "3",
												"value": "3"
											},
											{
												"title": "4",
												"value": "4"
											},
											{
												"title": "5",
												"value": "5"
											}
										]
									}
								],
								"width": "stretch"
							},
							{
								"type": "Column",
								"items": [
									{
										"type": "Input.ChoiceSet",
										"id": "provider",
										"value": "Dr. David Claux",
										"placeholder": "Provider",
										"choices": [
											{
												"title": "Dr. David Claux",
												"value": "Dr. David Claux"
											},
											{
												"title": "Dr. Kati Pinardi",
												"value": "Dr. Kati Pinardi"
											}
										]
									}
								],
								"width": "stretch"
							}
						]
					}
				],
				"actions": [
					{
						"type": "Action.Submit",
						"id": "scheduleSubmit",
						"title": "OK",
						"sentiment": "Positive"
					}
				]
			}
		},
		{
			"type": "Action.ShowCard",
			"title": "Comment",
			"card": {
				"type": "AdaptiveCard",
				"body": [
					{
						"type": "Input.Text",
						"id": "comments",
						"placeholder": "Enter comments",
						"isMultiline": true
					}
				],
				"actions": [
					{
						"type": "Action.Submit",
						"id": "commentSubmit",
						"title": "OK",
						"sentiment": "Positive"
					}
				],
				"$schema": "http://adaptivecards.io/schemas/adaptive-card.json"
			}
		}
	],
	"$schema": "http://adaptivecards.io/schemas/adaptive-card.json"
}