---
layout: layout
---
<!-- This is the blog index page -->

<style>
	.main-container {
		padding: 0 !important;
	}

	.uhf-container {
		width: 100% !important;
		max-width: 100% !important;
	}

	.footer-holder {
		border-top: none !important;
	}

	.coverImage {
		height: 172px !important;
		border: solid 1px rgba(0, 0, 0, .15);
		background-position: 50% 50% !important;
		background-size: cover;
		background-color: #f0f0f0;
		display: block;
	}
</style>

<div class="blog">


	<% page.posts.each(function(post, i) { %>
	<% if(i % 3 === 0) { %>
	<div class="w3-row-padding w3-margin-top w3-margin-bottom w3-padding-32">
		<div class="w3-col l1 w3-hide-small">&nbsp;</div>

		<% } %>
		<article class="w3-col l3 w3-container article">
			<% var imageSrc = post.featured_image ? url_for(post.featured_image) : url_for('content/icons_blue/blue-3x2.png');
				var style = "background-image: url('" + imageSrc + "')"  %>
			<a href="<%- config.root %><%- post.path %>" class="coverImage" style="<%= style %>"></a>

			<a class="article-title" href="<%- config.root %><%- post.path %>"><%- post.title %></a>

			<a class="article-subtitle" href="<%- config.root %><%- post.path %>"><%- post.subtitle %></a>

			<div class="w3-margin-top">
				<div class="w3-cell w3-cell-middle">
					<a href="<%- post.author.webpage %>"><img src="<%- post.author.avatar %>" class="w3-image w3-circle"
							style="width: 35px; margin-right: 6px" /></a>
				</div>
				<div class="w3-cell">
					<a class="article-author" href="<%- post.author.webpage %>"><%- post.author.name %></a>
					<datetime class="article-date" style="margin: 0"><%= post.date.format("MMM D") %></datetime> Â· <span
						class="reading-time"><%- readingTime(page.content, 'min read', 60) %></span>
				</div>
			</div>


		</article>

		<% if(i % 3 === 2) { %>
		<div class="w3-col l1 w3-hide-small">&nbsp;</div>

	</div>
	<% } %>
	<% }); %>

	<!-- Pager -->

	<ul class="w3-ul w3-center w3-medium">
		<% if (page.prev){ %>
		<li class="previous">
			<a class="w3-button w3-blue" href="<%- config.root %><%- page.prev_link %>">&larr; Newer Posts</a>
		</li>
		<% } %>
		<% if (page.next){ %>
		<li class="next">
			<a class="w3-button w3-blue" href="<%- config.root %><%- page.next_link %>">Older Posts &rarr;</a>
		</li>
		<% } %>
	</ul>
</div>