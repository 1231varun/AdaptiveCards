{
    "compilerOptions": {
        "lib": [
            "dom",
            "es2015"
        ],
        "module": "commonjs",
        "moduleResolution": "node",
        "sourceMap": true,
        "target": "es5",
        "allowJs": true,
        "rootDir": "src",
        "outDir": "built",
        "baseUrl": ".",
        "paths": {
            "adaptive-cards": [
                "../renderer/",
                "../../renderer/"
            ]
        }
    },
    "include": [
        "src/**/*",
        "src/containers/host-container.ts"
    ],
    "exclude": [
        "src/containers/*"
    ]
}