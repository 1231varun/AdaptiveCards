{
  "inputJson": {
    "$schema": "http://adaptivecards.io/schemas/adaptive-card.json",
    "type": "AdaptiveCard",
    "version": "1.0",
    "elements": {
      "Team": {
        "element": {
          "type": "Container",
          "items": [
            {
              "type": "Image",
              "url": "{logo}",
              "size": "medium"
            },
            {
              "type": "TextBlock",
              "text": "{name}",
              "horizontalAlignment": "center",
              "weight": "bolder"
            }
          ]
        }
      }
    },
    "body": [
      {
        "type": "Container",
        "items": [
          {
            "type": "ColumnSet",
            "columns": [
              {
                "type": "Column",
                "width": "auto",
                "items": [
                  {
                    "$type": "Team",
                    "$data": "{homeTeam}"
                  }
                ]
              },
              {
                "type": "Column",
                "width": "stretch",
                "separator": true,
                "spacing": "medium",
                "items": [
                  {
                    "type": "TextBlock",
                    "text": "{date}",
                    "horizontalAlignment": "center"
                  },
                  {
                    "type": "TextBlock",
                    "text": "{status}",
                    "spacing": "none",
                    "horizontalAlignment": "center"
                  },
                  {
                    "type": "TextBlock",
                    "text": "{homeTeam.score} - {awayTeam.score}",
                    "size": "extraLarge",
                    "horizontalAlignment": "center"
                  }
                ]
              },
              {
                "type": "Column",
                "width": "auto",
                "separator": true,
                "spacing": "medium",
                "items": [
                  {
                    "$type": "Team",
                    "$data": "{awayTeam}"
                  }
                ]
              }
            ]
          }
        ]
      }
    ]
  },

  "inputData": {
    "date": "Dec 4",
