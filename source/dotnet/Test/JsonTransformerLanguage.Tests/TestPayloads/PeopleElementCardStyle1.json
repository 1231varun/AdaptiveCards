{
  "inputJson": {
    "$schema": "http://adaptivecards.io/schemas/adaptive-card.json",
    "type": "AdaptiveCard",
    "version": "1.0",
    "elements": {
      "Person": {
        "schema": {
          "properties": {
            "name": {
              "type": "string",
              "description": "The full name of the person.",
              "examples": [ "Andrew Leader" ]
            },
            "picture": {
              "type": "string",
              "description": "URL to a picture of the person."
            }
          }
        },
        "element": {
          "type": "ColumnSet",
          "columns": [
            {
              "type": "Column",
              "items": [
                {
                  "type": "Image",
                  "style": "Person",
                  "url": "{data.picture}",
                  "size": "Small"
                }
              ],
              "width": "auto"
            },
            {
              "type": "Column",
              "verticalContentAlignment": "Center",
              "items": [
                {
                  "type": "TextBlock",
                  "size": "Medium",
                  "weight": "Bolder",
                  "text": "{data.name}"
                }
              ],
              "width": "stretch"
            }
          ]
        }
      }
    },
    "body": [
      {
        "type": "Person",
        "name": "Andrew Leader",
        "picture": "https://unsplash.it/64?image=883"
      },
      {
        "type": "Person",
        "name": "Matt Hidinger",
        "picture": "https://unsplash.it/64?image=669",
        "separator": true
      }
    ]
  },

